@model Shinogi.ViewModels.UserEditViewModel
<section>
    <h1>ユーザー編集</h1>
    <form method="post" asp-action="UpdateUser" asp-route-id="@Model.Id" class="form form-wide">
        <label>表示名<input name="DisplayName" value="@Model.DisplayName" /></label>
        <label>メールアドレス<input name="Email" type="email" value="@Model.Email" /></label>
        <label>ロール
            @{
                var roles = new[] { "Player", "Admins", "AI" };
            }
            <select name="Role">
                @foreach (var r in roles)
                {
                    if (r == Model.Role)
                    {
                        <option value="@r" selected>@r</option>
                    }
                    else
                    {
                        <option value="@r">@r</option>
                    }
                }
            </select>
        </label>
        <label>新しいパスワード（変更する場合のみ）<input name="NewPassword" type="password" /></label>
        <button type="submit">保存</button>
    </form>
    <p style="margin-top:16px;"><a asp-action="Users">&larr; ユーザー一覧に戻る</a></p>
</section>
